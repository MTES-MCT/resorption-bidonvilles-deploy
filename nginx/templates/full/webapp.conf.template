server {
    listen 80;
    server_name app.${RB_PROXY_FRONTEND_HOST};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location /sockjs-node {
        return 301 wss://$host$request_uri;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name app.${RB_PROXY_FRONTEND_HOST};

    gzip on;
    gzip_proxied any;
    gzip_comp_level 9;
    gzip_vary on;
    gzip_buffers 16 8k;
    gzip_min_length 50;
    gzip_types
        text/css
        text/plain
        text/javascript
        application/javascript
        application/json
        application/x-javascript
        application/xml
        application/xml+rss
        application/xhtml+xml
        application/x-font-ttf
        application/x-font-opentype
        application/vnd.ms-fontobject
        image/svg+xml
        image/x-icon
        application/rss+xml
        application/atom_xml;

    ssl_certificate ${RB_PROXY_CERTIFICATE_PATH};
    ssl_certificate_key ${RB_PROXY_CERTIFICATE_KEY_PATH};
    ssl_trusted_certificate ${RB_PROXY_TRUSTED_CERTIFICATE_PATH};

    include /etc/nginx/common/ssl[.]conf;

    location /socket {
        proxy_pass ${RB_PROXY_WEBAPP_WEBSOCKET_URI};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location / {
        proxy_pass ${RB_PROXY_WEBAPP_URI};
        proxy_read_timeout 60;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        include /etc/nginx/common/headers[.]conf;
        add_header Content-Security-Policy "default-src 'none'; connect-src 'self' https://api-adresse.data.gouv.fr/search/ https://${RB_PROXY_API_HOST}/ https://o551994.ingest.sentry.io/api/5676142/ https://stats.data.gouv.fr/matomo.php https://apicarto.ign.fr/api/ wss://app.${RB_PROXY_FRONTEND_HOST}:*/ https://a.tile.openstreetmap.org https://b.tile.openstreetmap.org https://c.tile.openstreetmap.org https://server.arcgisonline.com https://*.basemaps.cartocdn.com https://unpkg.com/leaflet@1.3.4/dist/images/; font-src 'self'; img-src 'self' https://${RB_PROXY_API_HOST}/ https://unpkg.com/leaflet@1.3.4/dist/images/ ${RB_S3_HOST} data: https://a.tile.openstreetmap.org https://b.tile.openstreetmap.org https://c.tile.openstreetmap.org https://server.arcgisonline.com https://*.basemaps.cartocdn.com; media-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://stats.data.gouv.fr/matomo.js; style-src 'self' 'unsafe-inline' https://unpkg.com/leaflet@1.3.4/dist/leaflet.css";
    }
}
